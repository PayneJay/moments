<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vmBlank"
            type="com.snail.wechatmoments.viewmodel.BlankViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/nav_dimen_size_60dp"
            android:layout_height="@dimen/nav_dimen_size_60dp"
            android:imageSrc="@{vmBlank.drawableRes}" />

        <TextView
            text="@{vmBlank.description}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_dimen_size_15dp"
            android:gravity="center"
            android:maxWidth="150dp"
            android:textColor="@color/color_8a8a8a"
            android:textSize="16sp" />
    </LinearLayout>
</layout>